{
  "compilerOptions": {
    "lib": ["es6"],
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "*/**/dist"]
}
